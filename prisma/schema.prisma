// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  firstName     String?
  lastName      String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  companyName   String?
  role          UserRole  @default(USER)
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts        Account[]
  sessions        Session[]
  subscriptions   Subscription[]
  formSubmissions ContactFormSubmission[]
  ebookProgress   EbookProgress[]
  orders          Order[]
  userTrainings   UserTraining[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id              String             @id @default(cuid())
  userId          String
  type            SubscriptionType   @default(EBOOK_ACCESS)
  status          SubscriptionStatus @default(INACTIVE)
  paymentProvider String?            @default("przelewy24")
  externalId      String?
  amount          Decimal?
  currency        String?            @default("PLN")
  startDate       DateTime?
  endDate         DateTime?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model ContactFormSubmission {
  id          String            @id @default(cuid())
  userId      String?
  name        String
  email       String
  companyName String?
  phone       String?
  subject     String
  message     String
  formType    ContactFormType   @default(GENERAL_INQUIRY)
  status      ContactFormStatus @default(NEW)
  source      String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("contact_form_submissions")
}

model EbookChapter {
  id                String   @id @default(cuid())
  title             String
  slug              String   @unique
  content           String
  excerpt           String?
  orderIndex        Int
  isPublished       Boolean  @default(true)
  estimatedReadTime Int?     @default(5)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  progress EbookProgress[]

  @@map("ebook_chapters")
}

model EbookProgress {
  id          String    @id @default(cuid())
  userId      String
  chapterId   String
  isCompleted Boolean   @default(false)
  readAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user    User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter EbookChapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId])
  @@map("ebook_progress")
}

model Training {
  id               String        @id @default(cuid())
  title            String
  slug             String        @unique
  shortDescription String
  fullDescription  String
  price            Decimal
  duration         String
  level            TrainingLevel @default(BEGINNER)
  imageUrl         String?
  isActive         Boolean       @default(true)
  orderIndex       Int           @default(0)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  orders        Order[]
  userTrainings UserTraining[]
  discountCodes DiscountCode[]

  @@map("trainings")
}

model Ebook {
  id               String   @id @default(cuid())
  title            String
  slug             String   @unique
  author           String
  shortDescription String
  fullDescription  String
  price            Decimal
  pages            Int?
  coverUrl         String?
  tableOfContents  String?
  isActive         Boolean  @default(true)
  orderIndex       Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("ebooks")
}

model BlogPost {
  id            String    @id @default(cuid())
  title         String
  slug          String    @unique
  excerpt       String?
  // @db.Text removed for SQLite compatibility
  content       String
  featuredImage String?
  author        String    @default("Administrator")
  publishedAt   DateTime?
  isPublished   Boolean   @default(false)
  // SQLite doesn't support scalar arrays. We'll use a simple string for tags in dev.
  tags          String    @default("")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("blog_posts")
}

model PageContent {
  id        String   @id @default(cuid())
  pageKey   String   @unique
  title     String?
  content   String
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("page_contents")
}

// Enums
enum UserRole {
  USER
  ADMIN
}

enum SubscriptionType {
  EBOOK_ACCESS
  PREMIUM_MEMBERSHIP
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  EXPIRED
  CANCELLED
  PENDING_PAYMENT
}

enum ContactFormType {
  GENERAL_INQUIRY
  CONSULTATION_REQUEST
  PARTNERSHIP
  SUPPORT
}

enum ContactFormStatus {
  NEW
  IN_PROGRESS
  COMPLETED
  CLOSED
}

enum TrainingLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model Order {
  id            String   @id @default(cuid())
  payuOrderId   String   @unique
  amount        Decimal
  currency      String   @default("PLN")
  status        String // PENDING, COMPLETED, CANCELED
  description   String?
  customerEmail String
  userId        String?
  trainingId    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user     User?     @relation(fields: [userId], references: [id])
  training Training? @relation(fields: [trainingId], references: [id])

  @@map("orders")
}

model UserTraining {
  id         String   @id @default(cuid())
  userId     String
  trainingId String
  isActive   Boolean  @default(true)
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  training Training @relation(fields: [trainingId], references: [id], onDelete: Cascade)

  @@unique([userId, trainingId])
  @@map("user_trainings")
}

model DiscountCode {
  id         String    @id @default(cuid())
  code       String    @unique
  discount   Int // Percentage discount (e.g., 20 for 20%)
  type       String    @default("PERCENTAGE") // PERCENTAGE, FIXED
  isActive   Boolean   @default(true)
  usageLimit Int? // Max number of uses (null for unlimited)
  usedCount  Int       @default(0)
  expiresAt  DateTime?
  trainingId String? // Optional: specific to a training
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  training Training? @relation(fields: [trainingId], references: [id])

  @@map("discount_codes")
}
